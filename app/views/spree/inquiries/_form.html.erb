<%= f.field_container :name, class: ['form-group'] do %>
  <%= f.label :name, Spree.t(:contact_name, scope: :inquiries) %><span class="required">*</span>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.error_message_on :name %>
<% end %>

<%= f.field_container :email, class: ['form-group'] do %>
  <%= f.label :email, Spree.t(:contact_email, scope: :inquiries) %><span class="required">*</span>
  <%= f.text_field :email, class: 'form-control' %>
  <%= f.error_message_on :email %>
<% end %>

<%= f.field_container :phone_number, class: ['form-group'] do %>
  <%= f.label :phone_number, Spree.t(:contact_phone_number, scope: :inquiries) %>
  <%= f.text_field :phone_number, class: 'form-control' %>
  <%= f.error_message_on :phone_number %>
<% end %>

<%= f.field_container :inquiry_type, class: ['form-group'] do %>
  <%= f.label :inquiry_type, Spree.t(:contact_inquiry_type, scope: :inquiries) %><span class="required">*</span>
  <%= f.select :inquiry_type, options_for_select(inquiry_types_translated), {}, class: 'form-control' %>
  <%= f.error_message_on :inquiry_type %>
<% end %>

<%= f.field_container :order_no, class: ['form-group'] do %>
  <%= f.label :order_no, Spree.t(:inquiry_order_no, scope: :inquiries) %>
  <%= f.text_field :order_no, class: 'form-control' %>
  <%= f.error_message_on :order_no %>
<% end %>

<%= f.field_container :message, class: ['form-group'] do %>
  <%= f.label :message, Spree.t(:inquiry_message, scope: :inquiries) %><span class="required">*</span>
  <%= f.text_area :message, { cols: 60, rows: 4, class: 'form-control' } %>
  <%= f.error_message_on :message %>
<% end %>

<%= render partial: 'captcha' %>

<%= f.hidden_field :client_viewport_size %>

<div class="text-right">
  <%= f.submit Spree.t(:send_inquiry), class: 'btn btn-primary' %>
</div>
